<Window x:Class="TestesWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestesWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    
    <!--Stack Panel-->
    <StackPanel>
        <!--Grid with definitions-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Margin="10 0 10 0" Grid.Column="0" Content="Apply"></Button>
            <Button Grid.Column="1" Content="Reset"></Button>
            <Button  Margin="10 0 10 0" Grid.Column="2" Content="Refresh"></Button>
        </Grid>
        <TextBlock Text="Pulse Properties" FontWeight="Bold" Margin="0 10"></TextBlock>

        <TextBlock Text="Description"></TextBlock>
        <TextBox Padding="2"></TextBox>
       
    </StackPanel>
</Window>
